<Window x:Class="Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Launcher"
        Height="360"
        Width="520"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- タイトル + ロゴ -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10" Orientation="Horizontal" VerticalAlignment="Center">
            <Image x:Name="LogoImage" Width="64" Height="64" Margin="0,0,12,0"/>
            <TextBlock x:Name="GameTitleText"
                       VerticalAlignment="Center"
                       FontSize="22"
                       FontWeight="Bold"
                       Text="Game Title"/>
        </StackPanel>
        
        <!-- ステータス -->
        <TextBlock x:Name="StatusText"
                   Grid.Row="1"
                   FontSize="14"
                   Text="更新を開始します..."
                   Margin="0,0,0,8"/>

        <!-- 進捗バー -->
        <StackPanel Grid.Row="2">
            <ProgressBar x:Name="ProgressBar"
                         Height="14"
                         Minimum="0"
                         Maximum="100"
                         IsIndeterminate="True"/>
            <TextBlock x:Name="ProgressDetail"
                       Margin="0,6,0,0"
                       Opacity="0.8"
                       Text=""/>
        </StackPanel>
        
        <!-- フッターロゴまたはコピーライトなど -->
        <TextBlock Grid.Row="3"
                   HorizontalAlignment="Center"
                   FontSize="10"
                   Opacity="0.5"
                   Text="© 2025 Mihanada"/>

        <Button x:Name="CloseButton"
                Grid.Row="3"
                Content="閉じる"
                Width="100"
                Height="34"
                HorizontalAlignment="Right"
                Visibility="Collapsed"
                Click="CloseButton_Click"/>
    </Grid>
</Window>

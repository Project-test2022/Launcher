<Window x:Class="Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mihanada Game Launcher"
        Width="520" Height="420"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="White"
        Foreground="Black">

    <Grid Margin="20">

        <!-- ゲームタイトル -->
        <TextBlock x:Name="TitleText"
                   Text="Game Title"
                   FontSize="26"
                   FontWeight="Bold"
                   Foreground="#00a5f5"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,15,0,0"/>

        <!-- ロゴ（中央配置） -->
        <Image x:Name="LogoImage"
               Source="Assets/logo.png"
               Width="180"
               Height="180"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               Margin="0,58,0,0"
               Stretch="Uniform"/>

        <!-- プログレスバー（ロゴの下） -->
        <ProgressBar x:Name="ProgressBar"
                     Height="18"
                     Minimum="0"
                     Maximum="100"
                     Value="0"
                     Foreground="#00c8ff"
                     Background="#e0e0e0"
                     BorderBrush="#cccccc"
                     BorderThickness="1"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Center"
                     Margin="40,130,40,0"/>

        <!-- ログ出力（1行分） -->
        <TextBlock x:Name="LogText"
                   Text="準備中..."
                   FontFamily="Consolas"
                   FontSize="13"
                   Foreground="Black"
                   TextAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,269,0,0"/>

        <!-- ボタンエリア -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="0,0,0,25"
                    Height="40">

            <!-- 更新ボタン -->
            <Button x:Name="UpdateButton"
                    Content="更新"
                    Width="120"
                    Height="40"
                    Margin="10,0"
                    FontSize="14"
                    FontWeight="Bold"
                    Background="#00a5f5"
                    Foreground="White"
                    BorderBrush="#00a5f5"
                    BorderThickness="1.5"
                    Click="UpdateButton_Click"
                    Cursor="Hand"
                    Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"/>

            <!-- プレイボタン -->
            <Button x:Name="PlayButton"
                    Content="プレイ"
                    Width="120"
                    Height="40"
                    Margin="10,0"
                    FontSize="14"
                    FontWeight="Bold"
                    Background="#00c8ff"
                    Foreground="White"
                    BorderBrush="#00c8ff"
                    BorderThickness="1.5"
                    Click="PlayButton_Click"
                    Cursor="Hand"
                    Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"/>
        </StackPanel>
    </Grid>
</Window>
